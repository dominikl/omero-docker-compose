import os                                                               

print(os.path.basename('/media/warrah/1TB/Dundee/OMERO/a_test.docx'))   
                                              
a_test.docx

head, tail = os.path.split('/media/warrah/1TB/Dundee/OMERO/a_test.docx')                                              

print(tail)                                                            
a_test.docx

print(head)                                                            
/media/warrah/1TB/Dundee/OMERO


###########################################################################
old_file = os.path.join("/media/warrah/1TB/Dundee/OMERO/", "a_test.docx")
new_file = os.path.join("/media/warrah/1TB/Dundee/OMERO/", "b_test.docx")
os.rename(old_file, new_file)
###########################################################################

fname = os.path.join("/media/warrah/1TB/Dundee/OMERO/", "b_test.docx")

print(fname)    
                                                                                         
/media/warrah/1TB/Dundee/OMERO/b_test.docx

name, ext = os.path.splitext(fname)  

print(name)                                                                                             
/media/warrah/1TB/Dundee/OMERO/b_test

print(ext)                                                                                             
.docx

add_text = input("Please enter a text to be added to the file name: ")

print(add_text)

new_fname = (name + add_text + ext)

os.rename(fname, new_fname)
###i could have written 
new_fname = os.rename(fname, name + add_text + ext)

##i can also store the function in a variable

rename_filename = os.rename(fname, new_fname)

###NOTE THAT IF I PRINT I WILL GET none AS REPLY AS THE os.rename doesn't return anything, it changes directly ###the name in the directory
